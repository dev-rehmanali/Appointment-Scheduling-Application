<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AddCustomerController">
   <children>
      <Label maxWidth="500.0" text="Customer" VBox.vgrow="ALWAYS">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Label>
      <HBox alignment="CENTER_LEFT" maxWidth="500.0" prefHeight="40.0" prefWidth="560.0" VBox.vgrow="ALWAYS">
         <children>
            <Label minWidth="100.0" prefWidth="100.0" text="ID:" />
            <TextField fx:id="customerIdTextField" editable="false" focusTraversable="false" promptText="Auto-Generated" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="30.0" layoutY="60.0" maxWidth="500.0" prefHeight="40.0" prefWidth="560.0" VBox.vgrow="ALWAYS">
         <children>
            <Label minWidth="100.0" prefWidth="100.0" text="Name:" />
            <TextField fx:id="customerNameTextField" promptText="Enter Customer Name" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="30.0" layoutY="100.0" maxWidth="500.0" prefHeight="40.0" prefWidth="560.0" VBox.vgrow="ALWAYS">
         <children>
            <Label minWidth="100.0" prefWidth="100.0" text="Country:" />
            <ComboBox fx:id="customerCountriesComboBox" maxWidth="1.7976931348623157E308" prefWidth="150.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="30.0" layoutY="140.0" maxWidth="500.0" prefHeight="40.0" prefWidth="560.0" VBox.vgrow="ALWAYS">
         <children>
            <Label minWidth="100.0" prefWidth="100.0" text="Province/State:" />
            <ComboBox fx:id="customerStatesComboBox" maxWidth="1.7976931348623157E308" prefWidth="150.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="30.0" layoutY="100.0" maxWidth="500.0" prefHeight="40.0" prefWidth="560.0" VBox.vgrow="ALWAYS">
         <children>
            <Label minWidth="100.0" prefWidth="100.0" text="Address:" />
            <TextField fx:id="customerAddressTextField" promptText="123 ABC Street" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="30.0" layoutY="220.0" maxWidth="500.0" prefHeight="40.0" prefWidth="560.0" VBox.vgrow="ALWAYS">
         <children>
            <Label minWidth="100.0" prefWidth="100.0" text="Postal Code:" />
            <TextField fx:id="customerPostalCodeTextField" promptText="39000" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="60.0" layoutY="302.0" maxWidth="500.0" prefHeight="40.0" prefWidth="560.0">
         <children>
            <Label minWidth="100.0" prefWidth="100.0" text="Phone No:" />
            <TextField fx:id="customerPhoneTextField" promptText="Enter phone number" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="30.0" layoutY="260.0" maxWidth="500.0" prefHeight="40.0" prefWidth="560.0" spacing="20.0" VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="customerAddButton" mnemonicParsing="false" prefWidth="100.0" text="Add" />
            <Button fx:id="customerCancelButton" layoutX="10.0" layoutY="18.0" mnemonicParsing="false" prefWidth="100.0" text="Cancel" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
